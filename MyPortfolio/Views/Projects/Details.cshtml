@model MyPortfolio.Models.Project
@{
    ViewBag.Title = "Project Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container mx-auto px-6 py-12">
    <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-6">@Model.Title</h1>

    <div class="bg-white dark:bg-gray-800 shadow-md rounded-xl p-6">
        <p class="text-gray-700 dark:text-gray-300 mb-4">@Model.Description</p>

        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" alt="@Model.Title" class="rounded-lg shadow-md mt-4 max-h-96" />
        }

        <div class="mt-6 space-y-3">
            <p><span class="font-semibold">Technologies:</span> @Model.Technologies</p>

            @if (!string.IsNullOrEmpty(Model.GitHubUrl))
            {
                <a href="@Model.GitHubUrl" target="_blank"
                   class="inline-block px-4 py-2 bg-gray-800 text-white rounded-lg hover:bg-gray-700 transition">
                    GitHub Repo
                </a>
            }

            @if (!string.IsNullOrEmpty(Model.LiveDemoUrl))
            {
                <a href="@Model.LiveDemoUrl" target="_blank"
                   class="inline-block px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
                    Live Demo
                </a>
            }
        </div>

        <div class="mt-8">
            <a href="@Url.Action("Index", "Projects")"
               class="px-4 py-2 bg-gray-200 dark:bg-gray-700 text-gray-800 dark:text-gray-200 rounded-lg hover:bg-gray-300 dark:hover:bg-gray-600 transition">
                ← Back to Projects
            </a>
        </div>
    </div>
</div>

