@model IEnumerable<MyPortfolio.Models.Project>
@{
    ViewBag.Title = "Projects";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="container mx-auto px-6 py-20">
    <!-- Header -->
    <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-gray-900 dark:text-white">My Projects</h1>
        <p class="mt-4 text-lg text-gray-600 dark:text-gray-300">
            Here are some of the projects I’ve worked on recently.
        </p>
    </div>

    <!-- Projects Grid -->
    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
        @foreach (var project in Model)
        {
            <a href="@Url.Action("Details", "Projects", new { id = project.Id })"
               class="block bg-white dark:bg-gray-800 rounded-xl shadow-md hover:shadow-lg transition p-6">
                <h2 class="text-xl font-semibold text-gray-800 dark:text-gray-200">
                    @project.Title
                </h2>
                <p class="text-gray-600 dark:text-gray-400 mt-2 line-clamp-3">
                    @project.Description
                </p>
                <p class="mt-3 text-sm text-gray-500 dark:text-gray-400">
                    Tech: @project.Technologies
                </p>
            </a>
        }
    </div>
</section>
