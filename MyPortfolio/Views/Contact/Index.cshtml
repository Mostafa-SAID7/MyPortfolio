@model MyPortfolio.Models.ContactMessage
@{
    ViewData["Title"] = "Contact";
}

<div class="container mx-auto px-6 py-12">
    <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-8">Contact Me</h1>

    @if (ViewBag.Success != null)
    {
        <div class="mb-6 p-4 bg-green-100 text-green-800 rounded-lg">
            @ViewBag.Success
        </div>
    }

    <form asp-action="Index" method="post" class="space-y-6 max-w-2xl">
        <div>
            <label asp-for="Name" class="block mb-2 text-sm font-medium text-gray-700 dark:text-gray-200">Name</label>
            <input asp-for="Name" class="w-full px-4 py-2 border rounded-lg dark:bg-gray-800 dark:text-gray-200 focus:ring focus:ring-blue-300" />
            <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Email" class="block mb-2 text-sm font-medium text-gray-700 dark:text-gray-200">Email</label>
            <input asp-for="Email" type="email" class="w-full px-4 py-2 border rounded-lg dark:bg-gray-800 dark:text-gray-200 focus:ring focus:ring-blue-300" />
            <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Subject" class="block mb-2 text-sm font-medium text-gray-700 dark:text-gray-200">Subject</label>
            <input asp-for="Subject" class="w-full px-4 py-2 border rounded-lg dark:bg-gray-800 dark:text-gray-200 focus:ring focus:ring-blue-300" />
        </div>

        <div>
            <label asp-for="Message" class="block mb-2 text-sm font-medium text-gray-700 dark:text-gray-200">Message</label>
            <textarea asp-for="Message" rows="5" class="w-full px-4 py-2 border rounded-lg dark:bg-gray-800 dark:text-gray-200 focus:ring focus:ring-blue-300"></textarea>
            <span asp-validation-for="Message" class="text-red-500 text-sm"></span>
        </div>

        <button type="submit"
                class="px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition">
            Send Message
        </button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
