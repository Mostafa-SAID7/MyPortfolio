@{
    string currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    string currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}

<nav id="mainNavbar" class="fixed top-0 left-0 w-full z-50 bg-white dark:bg-gray-900 transition-colors duration-300">
    <div class="container mx-auto flex justify-between items-center px-6 py-4">
        <!-- Logo -->
        <a href="/" class="text-2xl font-bold text-blue-600 dark:text-blue-400 transition-colors duration-300">
            MyPortfolio
        </a>

        <!-- Desktop Menu -->
        <ul class="hidden md:flex space-x-6 text-gray-700 dark:text-gray-200 font-medium transition-colors duration-300">
            <li>
                <a href="/"
                   class="@(currentController == "Home" ? "text-blue-600 dark:text-blue-400 font-semibold" : "hover:text-blue-600 dark:hover:text-blue-400") transition-colors duration-300">
                    Home
                </a>
            </li>
            <li>
                <a href="/Projects"
                   class="@(currentController == "Projects" ? "text-blue-600 dark:text-blue-400 font-semibold" : "hover:text-blue-600 dark:hover:text-blue-400") transition-colors duration-300">
                    Projects
                </a>
            </li>
            <li>
                <a href="/Blog"
                   class="@(currentController == "Blog" ? "text-blue-600 dark:text-blue-400 font-semibold" : "hover:text-blue-600 dark:hover:text-blue-400") transition-colors duration-300">
                    Blog
                </a>
            </li>
            <li>
                <a href="/Contact"
                   class="@(currentController == "Contact" ? "text-blue-600 dark:text-blue-400 font-semibold" : "hover:text-blue-600 dark:hover:text-blue-400") transition-colors duration-300">
                    Contact
                </a>
            </li>
        </ul>

        <div class="flex items-center gap-4">
            <!-- Dark Mode Button -->
            <button id="darkModeToggle"
                    class="p-2 rounded-full bg-gray-200 dark:bg-gray-700 transition-colors duration-300">
                <!-- Sun Icon -->
                <svg id="sunIcon" class="w-6 h-6 text-yellow-500 hidden transition-opacity duration-300"
                     fill="currentColor" viewBox="0 0 20 20">
                    <path d="M10 3.22l.61 1.26a1 1 0 00.76.55l1.4.2a1 1 0 01.55 1.7l-1.01.98a1 1 0 00-.29.89l.24 1.39a1 1 0 01-1.45 1.05l-1.25-.66a1 1 0 00-.93 0l-1.25.66a1 1 0 01-1.45-1.05l.24-1.39a1 1 0 00-.29-.89l-1.01-.98a1 1 0 01.55-1.7l1.4-.2a1 1 0 00.76-.55L10 3.22z" />
                </svg>
                <!-- Moon Icon -->
                <svg id="moonIcon" class="w-6 h-6 text-gray-800 dark:text-gray-200 transition-opacity duration-300"
                     fill="currentColor" viewBox="0 0 20 20">
                    <path d="M17.293 13.293A8 8 0 016.707 2.707 8.001 8.001 0 0010 18a8 8 0 007.293-4.707z" />
                </svg>
            </button>

            <!-- Mobile Hamburger -->
            <button id="menuToggle" class="md:hidden focus:outline-none transition-colors duration-300">
                <svg class="w-6 h-6 text-gray-700 dark:text-gray-200"
                     fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round"
                          d="M4 6h16M4 12h16M4 18h16" />
                </svg>
            </button>
        </div>
    </div>

    <!-- Mobile Menu -->
    <div id="mobileMenu" class="hidden md:hidden px-6 pb-4 bg-white dark:bg-gray-900 transition-colors duration-300">
        <ul class="space-y-4 text-gray-700 dark:text-gray-200 font-medium transition-colors duration-300">
            <li>
                <a href="/"
                   class="@(currentController == "Home" ? "block text-blue-600 dark:text-blue-400 font-semibold" : "block hover:text-blue-600 dark:hover:text-blue-400") transition-colors duration-300">
                    Home
                </a>
            </li>
            <li>
                <a href="/Projects"
                   class="@(currentController == "Projects" ? "block text-blue-600 dark:text-blue-400 font-semibold" : "block hover:text-blue-600 dark:hover:text-blue-400") transition-colors duration-300">
                    Projects
                </a>
            </li>
            <li>
                <a href="/Blog"
                   class="@(currentController == "Blog" ? "block text-blue-600 dark:text-blue-400 font-semibold" : "block hover:text-blue-600 dark:hover:text-blue-400") transition-colors duration-300">
                    Blog
                </a>
            </li>
            <li>
                <a href="/Contact"
                   class="@(currentController == "Contact" ? "block text-blue-600 dark:text-blue-400 font-semibold" : "block hover:text-blue-600 dark:hover:text-blue-400") transition-colors duration-300">
                    Contact
                </a>
            </li>
        </ul>
    </div>
</nav>
