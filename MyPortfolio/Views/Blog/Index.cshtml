@model IEnumerable<MyPortfolio.Models.BlogPost>
@{
    ViewData["Title"] = "Blog";
}

<div class="container mx-auto px-6 py-12">
    <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-8">Blog</h1>

    <div class="space-y-8">
        @foreach (var post in Model)
        {
            <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md hover:shadow-lg transition p-6">
                <h2 class="text-2xl font-semibold text-gray-900 dark:text-gray-100 mb-2">
                    <a href="@Url.Action("Details", "Blog", new { id = post.Id })" class="hover:text-blue-600 dark:hover:text-blue-400">
                        @post.Title
                    </a>
                </h2>

                <p class="text-sm text-gray-500 dark:text-gray-400 mb-4">
                    By @(!string.IsNullOrEmpty(post.Author) ? post.Author : "Admin") • @post.PublishedAt.ToString("MMMM dd, yyyy")
                </p>

                <p class="text-gray-700 dark:text-gray-300 line-clamp-3">
                    @(string.IsNullOrEmpty(post.Summary) ? post.Content.Substring(0, Math.Min(post.Content.Length, 150)) + "..." : post.Summary)
                </p>

                <a href="@Url.Action("Details", "Blog", new { id = post.Id })"
                   class="mt-4 inline-block text-blue-600 dark:text-blue-400 hover:underline">
                    Read more →
                </a>
            </div>
        }
    </div>
</div>
