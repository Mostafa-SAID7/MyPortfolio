@model MyPortfolio.Models.BlogPost
@{
    ViewData["Title"] = Model.Title;
}

<div class="container mx-auto px-6 py-12">
    <h1 class="text-4xl font-bold text-gray-900 dark:text-gray-100 mb-4">@Model.Title</h1>

    <p class="text-sm text-gray-500 dark:text-gray-400 mb-6">
        By @(!string.IsNullOrEmpty(Model.Author) ? Model.Author : "Admin") • @Model.PublishedAt.ToString("MMMM dd, yyyy")
    </p>

    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <img src="@Model.ImageUrl" alt="@Model.Title" class="rounded-lg shadow-md mb-6 max-h-96 mx-auto" />
    }

    <article class="prose dark:prose-invert lg:prose-lg max-w-none">
        @Html.Raw(Model.Content)
    </article>

    <div class="mt-10">
        <a href="@Url.Action("Index", "Blog")"
           class="px-4 py-2 bg-gray-200 dark:bg-gray-700 text-gray-800 dark:text-gray-200 rounded-lg hover:bg-gray-300 dark:hover:bg-gray-600 transition">
            ← Back to Blog
        </a>
    </div>
</div>
