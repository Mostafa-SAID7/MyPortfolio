@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en" class="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>

    <!-- ✅ Tailwind CDN -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Dark Mode Config -->
    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    colors: {
                        primary: '#2563eb'
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-gray-100 dark:bg-gray-900 text-gray-800 dark:text-gray-200">

    <div class="flex h-screen">
        <!-- Sidebar -->
        <aside class="w-64 bg-white dark:bg-gray-800 shadow-lg flex flex-col">
            <div class="p-4 text-2xl font-bold text-primary">
                Admin Panel
            </div>
            <nav class="flex-1 px-4 space-y-2">
                <a href="/Admin" class="block px-3 py-2 rounded-lg hover:bg-primary hover:text-white transition">
                    Dashboard
                </a>
                <a href="/Admin/Projects" class="block px-3 py-2 rounded-lg hover:bg-primary hover:text-white transition">
                    Projects
                </a>
                <a href="/Admin/Blog" class="block px-3 py-2 rounded-lg hover:bg-primary hover:text-white transition">
                    Blog
                </a>
                <a href="/Admin/Contact" class="block px-3 py-2 rounded-lg hover:bg-primary hover:text-white transition">
                    Messages
                </a>
                <a href="/Admin/Users" class="block px-3 py-2 rounded-lg hover:bg-primary hover:text-white transition">
                    Users & Roles
                </a>
            </nav>
            <div class="p-4 border-t dark:border-gray-700">
                <form asp-area="" asp-controller="Account" asp-action="Logout" method="post">
                    <button type="submit" class="w-full px-3 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700">
                        Logout
                    </button>
                </form>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="flex-1 p-6 overflow-y-auto">
            @RenderBody()
        </main>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
