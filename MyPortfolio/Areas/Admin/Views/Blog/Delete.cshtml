@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@model MyPortfolio.Models.BlogPost

<h1 class="text-2xl font-bold mb-6">Delete Blog</h1>

<div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow">
    <p>Are you sure you want to delete this blog?</p>
    <p class="font-bold">@Model.Title</p>

    <form asp-action="DeleteConfirmed" method="post" class="mt-4 space-x-2">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600">Delete</button>
        <a asp-action="Index" class="px-4 py-2 bg-gray-500 text-white rounded hover:bg-gray-600">Cancel</a>
    </form>
</div>
