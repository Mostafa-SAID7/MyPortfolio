@model MyPortfolio.Models.BlogPost

<h2 class="text-2xl font-bold mb-6 text-red-600">Delete Blog Post</h2>

<div class="border p-4 rounded bg-red-50 max-w-lg">
    <p class="mb-4">Are you sure you want to delete this blog post?</p>

    <p><strong>Title:</strong> @Model.Title</p>
    <p><strong>Author:</strong> @Model.Author</p>
    <p><strong>Created:</strong> @Model.CreatedAt</p>

    <form asp-action="DeleteConfirmed" method="post" class="mt-4">
        <input type="hidden" asp-for="Id" />
        <button type="submit"
                class="px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700">
            Yes, Delete
        </button>
        <a asp-action="Index"
           class="px-4 py-2 bg-gray-500 text-white rounded hover:bg-gray-600">
            Cancel
        </a>
    </form>
</div>
