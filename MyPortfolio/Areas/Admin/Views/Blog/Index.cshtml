@model IEnumerable<MyPortfolio.Models.BlogPost>

<h2 class="text-2xl font-bold mb-6">Manage Blog Posts</h2>

<a asp-action="Create"
   class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">
    + New Blog Post
</a>

<table class="w-full mt-6 border border-gray-200 rounded-lg shadow-sm">
    <thead class="bg-gray-100">
        <tr>
            <th class="p-3 text-left">Title</th>
            <th class="p-3 text-left">Author</th>
            <th class="p-3 text-left">Created</th>
            <th class="p-3 text-left">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var post in Model)
        {
            <tr class="border-t hover:bg-gray-50">
                <td class="p-3">@post.Title</td>
                <td class="p-3">@post.Author</td>
                <td class="p-3">@post.CreatedAt.ToShortDateString()</td>
                <td class="p-3 space-x-2">
                    <a asp-action="Edit" asp-route-id="@post.Id"
                       class="px-3 py-1 bg-yellow-500 text-white rounded hover:bg-yellow-600">
                        Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@post.Id"
                       class="px-3 py-1 bg-red-600 text-white rounded hover:bg-red-700">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
