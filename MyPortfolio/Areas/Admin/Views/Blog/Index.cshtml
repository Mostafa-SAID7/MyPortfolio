@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@model IEnumerable<MyPortfolio.Models.BlogPost>

<h1 class="text-2xl font-bold mb-6">Blogs</h1>

<a href="@Url.Action("Create")" class="px-4 py-2 bg-green-500 text-white rounded-lg hover:bg-green-600">Create New Blog</a>

<table class="min-w-full bg-white dark:bg-gray-800 mt-4 rounded-lg shadow overflow-hidden">
    <thead class="bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-200">
        <tr>
            <th class="px-4 py-2 text-left">Title</th>
            <th class="px-4 py-2">Created At</th>
            <th class="px-4 py-2">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var blog in Model)
        {
            <tr class="border-b border-gray-200 dark:border-gray-700">
                <td class="px-4 py-2">@blog.Title</td>
                <td class="px-4 py-2 text-center">@blog.CreatedAt.ToShortDateString()</td>
                <td class="px-4 py-2 text-center space-x-2">
                    <a href="@Url.Action("Edit", new { id = blog.Id })" class="px-2 py-1 bg-blue-500 text-white rounded hover:bg-blue-600">Edit</a>
                    <a href="@Url.Action("Delete", new { id = blog.Id })" class="px-2 py-1 bg-red-500 text-white rounded hover:bg-red-600">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
