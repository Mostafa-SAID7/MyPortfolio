@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@model MyPortfolio.Models.BlogPost

<h1 class="text-2xl font-bold mb-6">Create Blog</h1>

<form asp-action="Create" method="post" class="space-y-4">
    <div>
        <label class="block font-medium">Title</label>
        <input asp-for="Title" class="w-full p-2 border rounded dark:bg-gray-700 dark:border-gray-600" />
        <span asp-validation-for="Title" class="text-red-500"></span>
    </div>
    <div>
        <label class="block font-medium">Content</label>
        <textarea asp-for="Content" class="w-full p-2 border rounded dark:bg-gray-700 dark:border-gray-600"></textarea>
        <span asp-validation-for="Content" class="text-red-500"></span>
    </div>
    <button type="submit" class="px-4 py-2 bg-green-500 text-white rounded hover:bg-green-600">Save</button>
    <a asp-action="Index" class="px-4 py-2 bg-gray-500 text-white rounded hover:bg-gray-600">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
