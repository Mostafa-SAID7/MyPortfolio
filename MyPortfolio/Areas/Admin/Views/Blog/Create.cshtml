@model MyPortfolio.Models.BlogPost

<h2 class="text-2xl font-bold mb-6">Create New Blog Post</h2>

<form asp-action="Create" method="post" class="space-y-4 max-w-lg">
    <div>
        <label class="block font-medium">Title</label>
        <input asp-for="Title" class="w-full border rounded p-2" />
        <span asp-validation-for="Title" class="text-red-500 text-sm"></span>
    </div>

    <div>
        <label class="block font-medium">Content</label>
        <textarea asp-for="Content" class="w-full border rounded p-2 h-40"></textarea>
        <span asp-validation-for="Content" class="text-red-500 text-sm"></span>
    </div>

    <div>
        <label class="block font-medium">Author</label>
        <input asp-for="Author" class="w-full border rounded p-2" />
        <span asp-validation-for="Author" class="text-red-500 text-sm"></span>
    </div>

    <button type="submit"
            class="px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700">
        Save
    </button>
    <a asp-action="Index" class="px-4 py-2 bg-gray-500 text-white rounded hover:bg-gray-600">
        Cancel
    </a>
</form>
