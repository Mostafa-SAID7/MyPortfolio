@model IEnumerable<MyPortfolio.Models.ContactMessage>

<h2 class="text-2xl font-bold mb-6">Manage Contact Messages</h2>

<table class="w-full border border-gray-200 rounded-lg shadow-sm">
    <thead class="bg-gray-100">
        <tr>
            <th class="p-3 text-left">Name</th>
            <th class="p-3 text-left">Email</th>
            <th class="p-3 text-left">Subject</th>
            <th class="p-3 text-left">Received</th>
            <th class="p-3 text-left">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var msg in Model)
        {
            <tr class="border-t hover:bg-gray-50">
                <td class="p-3">@msg.Name</td>
                <td class="p-3">@msg.Email</td>
                <td class="p-3">@msg.Subject</td>
                <td class="p-3">@msg.CreatedAt.ToShortDateString()</td>
                <td class="p-3 space-x-2">
                    <a asp-action="Details" asp-route-id="@msg.Id"
                       class="px-3 py-1 bg-blue-600 text-white rounded hover:bg-blue-700">
                        View
                    </a>
                    <a asp-action="Delete" asp-route-id="@msg.Id"
                       class="px-3 py-1 bg-red-600 text-white rounded hover:bg-red-700">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
