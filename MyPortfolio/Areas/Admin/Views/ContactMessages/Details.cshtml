@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@model MyPortfolio.Models.ContactMessage

<h1 class="text-2xl font-bold mb-6">Message Details</h1>

<div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow space-y-2">
    <p><strong>Name:</strong> @Model.Name</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Message:</strong> @Model.Message</p>
    <p><strong>Received At:</strong> @Model.CreatedAt.ToShortDateString()</p>
</div>

<a asp-action="Index" class="mt-4 inline-block px-4 py-2 bg-gray-500 text-white rounded hover:bg-gray-600">Back</a>
