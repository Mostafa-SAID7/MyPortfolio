@model Microsoft.AspNetCore.Identity.IdentityUser

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="p-6 max-w-md mx-auto bg-white dark:bg-gray-800 rounded-2xl shadow-md">
    <h1 class="text-2xl font-bold mb-4 text-gray-800 dark:text-gray-200">Delete User</h1>

    <p class="mb-6 text-gray-700 dark:text-gray-300">
        Are you sure you want to delete user <strong>@Model.Email</strong>?
    </p>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <div class="flex space-x-4">
            <button type="submit"
                    class="px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition">
                Yes, Delete
            </button>
            <a asp-action="Index"
               class="px-4 py-2 bg-gray-400 text-white rounded-lg hover:bg-gray-500 transition">
                Cancel
            </a>
        </div>
    </form>
</div>
