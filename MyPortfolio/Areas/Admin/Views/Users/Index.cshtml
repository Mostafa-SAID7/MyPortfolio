@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="p-6">
    <h1 class="text-2xl font-bold mb-6 text-gray-800 dark:text-gray-200">Users</h1>

    <table class="min-w-full bg-white dark:bg-gray-800 shadow-md rounded-lg overflow-hidden">
        <thead class="bg-gray-200 dark:bg-gray-700">
            <tr>
                <th class="px-4 py-2 text-left">Email</th>
                <th class="px-4 py-2 text-left">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                var isAdmin = UserManager.IsInRoleAsync(user, "Admin").Result;
                <tr class="border-b border-gray-200 dark:border-gray-700">
                    <td class="px-4 py-2 text-gray-800 dark:text-gray-200">@user.Email</td>
                    <td class="px-4 py-2 space-x-2">
                        <a asp-action="EditRoles" asp-route-id="@user.Id"
                           class="px-3 py-1 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition">
                            Edit Roles
                        </a>

                        @if (!isAdmin)
                        {
                            <a asp-action="Delete" asp-route-id="@user.Id"
                               onclick="return confirm('Are you sure you want to delete this user?');"
                               class="px-3 py-1 bg-red-500 text-white rounded-lg hover:bg-red-600 transition">
                                Delete
                            </a>
                        }

                        else
                        {
                            <span class="px-3 py-1 bg-gray-400 text-white rounded-lg cursor-not-allowed">
                                Admin Protected
                            </span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
