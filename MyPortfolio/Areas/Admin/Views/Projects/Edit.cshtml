@model MyPortfolio.Models.Project
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-2xl font-bold mb-6">Edit Project</h1>

<form asp-action="Edit" method="post" class="space-y-4">
    <input type="hidden" asp-for="Id" />
    <div>
        <label class="block mb-1">Title</label>
        <input asp-for="Title" class="w-full p-2 border rounded" />
        <span asp-validation-for="Title" class="text-red-500"></span>
    </div>
    <div>
        <label class="block mb-1">Description</label>
        <textarea asp-for="Description" class="w-full p-2 border rounded"></textarea>
        <span asp-validation-for="Description" class="text-red-500"></span>
    </div>
    <button type="submit" class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600">Save</button>
    <a asp-action="Index" class="px-4 py-2 bg-gray-500 text-white rounded hover:bg-gray-600">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
